<style>
    .downloads-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 5rem 2rem 2rem;
        min-height: 60vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 3rem;
        font-family: "Iosevka", sans-serif;
    }

    :global(.footer) {
        font-family: "Iosevka", sans-serif;
    }

    :global(.hero-header) {
        font-family: "Iosevka", sans-serif;
    }

    .text-center {
        text-align: center;
        margin-bottom: 2rem;
    }

    .title {
        font-size: 3.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
        font-family: "Iosevka", sans-serif;
    }

    .subtitle {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.6);
    }

    /* Recommended Card */
    .recommended-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem 2rem;
        width: 100%;
        max-width: 900px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        backdrop-filter: blur(12px);
    }

    .recommended-label {
        display: block;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.5);
        margin-bottom: 0.25rem;
    }

    .platform-name {
        font-size: 1.25rem;
        font-weight: 600;
        color: white;
        margin: 0;
    }

    .download-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: #2563eb;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.2s;
    }

    .download-button:hover {
        background: #1d4ed8;
    }

    .download-button .icon {
        width: 20px;
        height: 20px;
    }

    /* Grid */
    .platforms-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        width: 100%;
        max-width: 900px;
    }

    .platform-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        backdrop-filter: blur(12px);
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 2rem;
    }

    .platform-icon {
        width: 24px;
        height: 24px;
        color: white;
    }

    .card-header h3 {
        font-size: 1.1rem;
        font-weight: 600;
        color: white;
        margin: 0;
    }

    .download-options {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .download-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .download-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .size {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.4);
    }

    .download-link {
        color: rgba(255, 255, 255, 0.6);
        transition: color 0.2s;
        display: flex;
        align-items: center;
    }

    .download-link:hover {
        color: white;
    }

    .download-icon {
        width: 16px;
        height: 16px;
    }

    .coming-soon {
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.9rem;
    }

    @media (max-width: 768px) {
        .platforms-grid {
            grid-template-columns: 1fr;
        }

        .recommended-card {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .download-button {
            width: 100%;
            justify-content: center;
        }

        .title {
            font-size: 2.5rem;
        }
    }
</style>
