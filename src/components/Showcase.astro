// Showcase section with two large side-by-side feature cards
---

<section class="showcase">
    <div class="showcase-container">
        <h2 class="showcase-title">
            Logia <span class="highlight">supercharges</span> your learning
        </h2>
        <p class="showcase-subtitle">
            Two powerful features that transform how you capture and organize
            knowledge
        </p>

        <div class="showcase-grid">
            <!-- Audio Capture Card -->
            <div class="showcase-card audio-card">
                <div class="card-media">
                    <div class="audio-demo">
                        <div class="waveform">
                            <div class="wave"></div>
                            <div class="wave"></div>
                            <div class="wave"></div>
                            <div class="wave"></div>
                            <div class="wave"></div>
                            <div class="wave"></div>
                            <div class="wave"></div>
                            <div class="wave"></div>
                            <div class="wave"></div>
                            <div class="wave"></div>
                            <div class="wave"></div>
                            <div class="wave"></div>
                        </div>
                        <div class="transcript-preview">
                            <div class="transcript-line typing">
                                <span class="speaker">Speaker:</span>
                                <span class="text"
                                    >"The key insight here is that neural
                                    networks can learn..."</span
                                >
                            </div>
                        </div>
                        <div class="recording-indicator">
                            <span class="rec-dot"></span>
                            <span class="rec-text">Recording</span>
                            <span class="rec-time">02:34</span>
                        </div>
                    </div>
                </div>
                <div class="card-content">
                    <h3 class="card-title">Audio Capture & Transcription</h3>
                    <p class="card-description">
                        Record lectures, meetings, and thoughts. Whisper AI
                        transcribes everything locally, keeping your data
                        private while making every word searchable.
                    </p>
                </div>
            </div>

            <!-- Canvas Card -->
            <div class="showcase-card canvas-card">
                <div class="card-media">
                    <div class="canvas-demo">
                        <div class="canvas-toolbar">
                            <div class="tool active">
                                <svg
                                    width="18"
