                                    <path d="M12 19l7-7 3 3-7 7-3-3z"></path>
                                    <path
                                        d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"
                                    ></path>
                                </svg>
                            </div>
                            <div class="tool">
                                <svg
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <rect
                                        x="3"
                                        y="3"
                                        width="18"
                                        height="18"
                                        rx="2"
                                        ry="2"></rect>
                                </svg>
                            </div>
                            <div class="tool">
                                <svg
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <circle cx="12" cy="12" r="10"></circle>
                                </svg>
                            </div>
                            <div class="tool">
                                <svg
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <line x1="5" y1="12" x2="19" y2="12"></line>
                                </svg>
                            </div>
                        </div>
                        <div class="canvas-content">
                            <div class="sticky-note note-1">
                                <span>Research</span>
                            </div>
                            <div class="sticky-note note-2">
                                <span>Ideas ðŸ’¡</span>
                            </div>
                            <div class="connection-line"></div>
                            <div class="drawing-path"></div>
                            <div class="shape-rect"></div>
                            <div class="cursor-trail"></div>
                        </div>
                    </div>
                </div>
                <div class="card-content">
                    <h3 class="card-title">Infinite Canvas</h3>
                    <p class="card-description">
                        Think visually with our TLDRAW-powered canvas. Sketch
                        diagrams, connect ideas, and create visual maps of your
                        knowledgeâ€”all synced with your notes.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .showcase {
        padding: 6rem 2rem;
        background: linear-gradient(
            180deg,
            transparent 0%,
            rgba(99, 102, 241, 0.03) 50%,
            transparent 100%
        );
    }

    .showcase-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .showcase-title {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 700;
        text-align: center;
        color: #1a1a2e;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .showcase-title .highlight {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .showcase-subtitle {
        text-align: center;
        color: #64748b;
        font-size: 1.25rem;
        max-width: 600px;
        margin: 0 auto 4rem;
    }

    .showcase-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }

    @media (max-width: 900px) {
        .showcase-grid {
            grid-template-columns: 1fr;
        }
    }

    .showcase-card {
        background: #ffffff;
        border-radius: 24px;
        overflow: hidden;
        box-shadow:
            0 4px 6px -1px rgba(0, 0, 0, 0.05),
            0 10px 15px -3px rgba(0, 0, 0, 0.08),
            0 20px 25px -5px rgba(0, 0, 0, 0.05);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .showcase-card:hover {
        transform: translateY(-8px);
        box-shadow:
            0 10px 15px -3px rgba(0, 0, 0, 0.08),
            0 20px 25px -5px rgba(0, 0, 0, 0.1),
            0 40px 50px -12px rgba(0, 0, 0, 0.15);
    }

    .card-media {
        height: 320px;
        position: relative;
        overflow: hidden;
    }

    .audio-card .card-media {
        background: linear-gradient(135deg, #1e1b4b 0%, #312e81 100%);
    }

    .canvas-card .card-media {
        background: linear-gradient(135deg, #fafafa 0%, #f1f5f9 100%);
        border-bottom: 1px solid #e2e8f0;
    }

    .card-content {
        padding: 2rem;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a1a2e;
        margin-bottom: 0.75rem;
    }

    .card-description {
        color: #64748b;
        font-size: 1rem;
        line-height: 1.7;
    }

    /* Audio Demo Styles */
    .audio-demo {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        position: relative;
    }

    .waveform {
        display: flex;
        align-items: center;
        gap: 4px;
        height: 80px;
        margin-bottom: 2rem;
    }

    .wave {
        width: 4px;
        background: linear-gradient(180deg, #818cf8 0%, #6366f1 100%);
        border-radius: 2px;
        animation: wave 1s ease-in-out infinite;
    }

    .wave:nth-child(1) {
        height: 20px;
        animation-delay: 0s;
    }
    .wave:nth-child(2) {
        height: 40px;
        animation-delay: 0.1s;
    }
    .wave:nth-child(3) {
        height: 60px;
        animation-delay: 0.2s;
    }
    .wave:nth-child(4) {
        height: 35px;
        animation-delay: 0.3s;
    }
    .wave:nth-child(5) {
        height: 70px;
        animation-delay: 0.4s;
    }
    .wave:nth-child(6) {
        height: 45px;
        animation-delay: 0.5s;
    }
    .wave:nth-child(7) {
        height: 55px;
        animation-delay: 0.6s;
    }
    .wave:nth-child(8) {
        height: 30px;
        animation-delay: 0.7s;
    }
    .wave:nth-child(9) {
        height: 65px;
        animation-delay: 0.8s;
    }
    .wave:nth-child(10) {
        height: 40px;
        animation-delay: 0.9s;
    }
    .wave:nth-child(11) {
        height: 50px;
        animation-delay: 1s;
    }
    .wave:nth-child(12) {
        height: 25px;
        animation-delay: 1.1s;
    }

    @keyframes wave {
        0%,
        100% {
            transform: scaleY(1);
        }
        50% {
            transform: scaleY(0.5);
        }
    }

    .transcript-preview {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        padding: 1rem 1.5rem;
        max-width: 90%;
    }

    .transcript-line {
        color: #e2e8f0;
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .transcript-line .speaker {
        color: #818cf8;
        font-weight: 600;
        margin-right: 0.5rem;
    }

    .transcript-line.typing .text {
        border-right: 2px solid #818cf8;
        animation: blink 0.7s infinite;
    }

    @keyframes blink {
        0%,
        50% {
            border-color: #818cf8;
        }
        51%,
        100% {
            border-color: transparent;
        }
    }

    .recording-indicator {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(0, 0, 0, 0.3);
        padding: 0.5rem 1rem;
        border-radius: 20px;
    }

    .rec-dot {
        width: 8px;
        height: 8px;
        background: #ef4444;
        border-radius: 50%;
        animation: pulse 1.5s infinite;
    }

    @keyframes pulse {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
    }

    .rec-text {
        color: #ef4444;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .rec-time {
        color: #e2e8f0;
        font-size: 0.85rem;
        font-family: monospace;
    }

    /* Canvas Demo Styles */
    .canvas-demo {
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .canvas-toolbar {
        display: flex;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        background: white;
        border-bottom: 1px solid #e2e8f0;
    }

    .tool {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        color: #64748b;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .tool:hover {
        background: #f1f5f9;
        color: #1a1a2e;
    }

    .tool.active {
        background: #6366f1;
        color: white;
    }

    .canvas-content {
        flex: 1;
        position: relative;
        overflow: hidden;
    }

    .sticky-note {
        position: absolute;
        padding: 1rem;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 500;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        animation: float 3s ease-in-out infinite;
    }

    .note-1 {
        top: 20%;
        left: 15%;
        background: #fef3c7;
        color: #92400e;
        transform: rotate(-3deg);
        animation-delay: 0s;
    }

    .note-2 {
        top: 35%;
        right: 20%;
        background: #dbeafe;
        color: #1e40af;
        transform: rotate(2deg);
        animation-delay: 0.5s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0) rotate(-3deg);
        }
        50% {
            transform: translateY(-5px) rotate(-2deg);
        }
    }

    .connection-line {
        position: absolute;
        top: 32%;
        left: 30%;
        width: 120px;
        height: 2px;
        background: linear-gradient(90deg, #94a3b8, transparent);
        transform: rotate(15deg);
    }

    .drawing-path {
        position: absolute;
        bottom: 25%;
        left: 20%;
        width: 150px;
        height: 80px;
        border: 3px solid #6366f1;
        border-radius: 50% 20% 40% 30%;
        opacity: 0.6;
        animation: draw 2s ease-in-out infinite alternate;
    }

    @keyframes draw {
        0% {
            clip-path: inset(0 100% 0 0);
        }
        100% {
            clip-path: inset(0 0 0 0);
        }
    }

    .shape-rect {
        position: absolute;
        bottom: 20%;
        right: 25%;
        width: 60px;
        height: 40px;
        border: 2px solid #8b5cf6;
        border-radius: 8px;
        animation: fadeInOut 2s ease-in-out infinite;
    }

    @keyframes fadeInOut {
        0%,
        100% {
            opacity: 0.4;
        }
        50% {
            opacity: 0.8;
        }
    }

    .cursor-trail {
        position: absolute;
        bottom: 40%;
        right: 35%;
        width: 20px;
        height: 20px;
        background: radial-gradient(
            circle,
            rgba(99, 102, 241, 0.5) 0%,
            transparent 70%
        );
        border-radius: 50%;
        animation: cursorMove 3s ease-in-out infinite;
    }

    @keyframes cursorMove {
        0% {
            transform: translate(0, 0);
        }
        25% {
            transform: translate(-30px, 20px);
        }
        50% {
            transform: translate(-60px, -10px);
        }
        75% {
            transform: translate(-20px, -30px);
        }
        100% {
            transform: translate(0, 0);
        }
    }
</style>
